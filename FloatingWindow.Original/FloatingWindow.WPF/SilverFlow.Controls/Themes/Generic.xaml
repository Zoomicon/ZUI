                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0.5" Opacity="0.3" BlurRadius="3" />
                        </Border.Effect>
                        <ContentPresenter Content="{TemplateBinding Content}"
